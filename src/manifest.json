{
	"manifest_version": 3,
	"name": "Unhook Telegram Elements",
	"version": "1.0",
	"description": "Hide unwanted sections from Telegram web client",
	"permissions": ["scripting", "activeTab"],
	"host_permissions": ["*://web.telegram.org/a/*"],
	"content_scripts": [
		{
			"matches": ["*://web.telegram.org/a/*"],
			"js": ["content.js"],
			"css": ["styles.css"]
		}
	],
	"page_action": {
		"default_icon": {
			"16": "icons/icon16.png",
			"32": "icons/icon32.png",
			"48": "icons/icon48.png",
			"128": "icons/icon128.png"
		}
	},
	"icons": {
		"16": "icons/icon16.png",
		"32": "icons/icon32.png",
		"48": "icons/icon48.png",
		"128": "icons/icon128.png"
	}
}
